{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildDebug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/p:Configuration=Debug",
                "/t:build",
                "/verbosity:minimal"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildRelease",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/p:Configuration=Release",
                "/t:build",
                "/verbosity:minimal"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "runDebug",
            "dependsOn" : "buidDebug",
            "type": "shell",
            "command": "mono",
            "args": [
                "StdTest/bin/Debug/StdTest.exe"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always",
                "focus": true
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
    ]
}